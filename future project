        <div>
          <h4 class="font-bold">Contacto</h4>
          <form id="contact" class="mt-3 flex flex-col gap-3">
            <input id="contactName" class="p-2 rounded-md bg-white/5 border border-white/6" placeholder="Nombre" />
            <input id="contactEmail" class="p-2 rounded-md bg-white/5 border border-white/6" placeholder="Correo" />
            <textarea id="contactMessage" class="p-2 rounded-md bg-white/5 border border-white/6" rows="3" placeholder="Mensaje"></textarea>
