  <script>
    /* ===== Datos editables y persistencia local ===== */

    const defaultState = {
      brandName: 'Tu Emprendimiento',
      tagline: 'Una idea. Gran impacto.',
      headline: 'Lanza tu proyecto con estilo',
      description: 'Presenta tu trabajo, comparte redes y sube fotos de tu producto o equipo. Esta plantilla es editable y pensada para impresionar.',
      github: 'https://github.com/usuario',
      githubLabel: '@usuario',
      twitter: '#',
      twitterLabel: '@twitter',
      instagram: '#',
      instagramLabel: '@instagram',
      linkedin: '#',
      linkedinLabel: 'LinkedIn',
      heroImg: '',
      gallery: []
    };

    function loadState() {
      try {
        const raw = localStorage.getItem('landingState');
        if (!raw) return {...defaultState};
        const parsed = JSON.parse(raw);
        return {...defaultState, ...parsed};
      } catch (e) { return {...defaultState}; }
    }

    function saveState(state) { localStorage.setItem('landingState', JSON.stringify(state)); }

    let state = loadState();

    // Elements
    const brandName = document.getElementById('brandName');
    const tagline = document.getElementById('tagline');
    const headline = document.getElementById('headline');
    const description = document.getElementById('description');
    const githubLink = document.getElementById('githubLink');
    const githubLabel = document.getElementById('githubLabel');
    const heroImg = document.getElementById('heroImg');
    const galleryEl = document.getElementById('gallery');

    // Socials
    const twitterLink = document.getElementById('twitterLink');
    const twitterLabel = document.getElementById('twitterLabel');
    const instagramLink = document.getElementById('instagramLink');
    const instagramLabel = document.getElementById('instagramLabel');
    const linkedinLink = document.getElementById('linkedinLink');
    const linkedinLabel = document.getElementById('linkedinLabel');

    // Fill UI from state
    function render() {
      brandName.textContent = state.brandName;
      tagline.textContent = state.tagline;
      headline.textContent = state.headline;
      description.textContent = state.description;
      githubLink.href = state.github;
      githubLabel.textContent = state.githubLabel;
      twitterLink.href = state.twitter; twitterLabel.textContent = state.twitterLabel;
      instagramLink.href = state.instagram; instagramLabel.textContent = state.instagramLabel;
      linkedinLink.href = state.linkedin; linkedinLabel.textContent = state.linkedinLabel;
      heroImg.src = state.heroImg || 'data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="800" height="400"><rect width="100%" height="100%" fill="%23202a37"/></svg>';

      // gallery
      galleryEl.innerHTML = '';
      state.gallery.slice().reverse().forEach((data, idx) => {
        const div = document.createElement('div');
        div.className = 'relative';
        div.innerHTML = `\n          <img src="${data}" class="thumb" alt="foto-${idx}"/>\n          <button data-idx="${idx}" class="absolute top-2 right-2 bg-black/50 px-2 py-1 rounded-md text-xs">Eliminar</button>\n        `;
        galleryEl.appendChild(div);
      });
    }

    render();

    // Edit flow
    const editBtn = document.getElementById('editBtn');
    editBtn.addEventListener('click', () => openEditor());

    function openEditor() {
      // Simple prompt-based editor so we avoid heavy UI. We accept empty to keep current.
      const newBrand = prompt('Nombre (brand):', state.brandName) || state.brandName;
      const newTag = prompt('Tagline:', state.tagline) || state.tagline;
      const newHead = prompt('Titular principal:', state.headline) || state.headline;
      const newDesc = prompt('Descripción corta:', state.description) || state.description;
      const newGit = prompt('URL GitHub (completa):', state.github) || state.github;
      const newGitLabel = prompt('Etiqueta GitHub (ej. @tuusuario):', state.githubLabel) || state.githubLabel;
      const newTw = prompt('URL Twitter:', state.twitter) || state.twitter;
      const newTwLabel = prompt('Etiqueta Twitter:', state.twitterLabel) || state.twitterLabel;
      const newIg = prompt('URL Instagram:', state.instagram) || state.instagram;
      const newIgLabel = prompt('Etiqueta Instagram:', state.instagramLabel) || state.instagramLabel;
      const newLi = prompt('URL LinkedIn:', state.linkedin) || state.linkedin;
      const newLiLabel = prompt('Etiqueta LinkedIn:', state.linkedinLabel) || state.linkedinLabel;

      state = {...state,
        brandName: newBrand,
        tagline: newTag,
        headline: newHead,
        description: newDesc,
        github: newGit,
        githubLabel: newGitLabel,
        twitter: newTw,
        twitterLabel: newTwLabel,
        instagram: newIg,
        instagramLabel: newIgLabel,
        linkedin: newLi,
        linkedinLabel: newLiLabel
      };
      saveState(state);
      render();
      alert('Cambios guardados localmente en tu navegador.');
    }

    // Image input handling
    const imageInput = document.getElementById('imageInput');
    imageInput.addEventListener('change', async (ev) => {
      const files = Array.from(ev.target.files || []);
      for (const f of files) {
        const data = await toBase64(f);
        state.gallery.push(data);
      }
      saveState(state);
      render();
      imageInput.value = '';
    });

    function toBase64(file) {
      return new Promise((res, rej) => {
        const reader = new FileReader();
        reader.onload = () => res(reader.result);
        reader.onerror = rej;
        reader.readAsDataURL(file);
      });
    }

    // Delegated delete
    galleryEl.addEventListener('click', (e) => {
      const btn = e.target.closest('button');
      if (!btn) return;
      const idx = Number(btn.dataset.idx);
      if (!Number.isFinite(idx)) return;
      // idx is index in reversed view: map to actual
      const realIdx = state.gallery.length - 1 - idx;
      if (confirm('Eliminar esta foto?')) {
        state.gallery.splice(realIdx, 1);
        saveState(state);
        render();
      }
    });

    // Clear gallery
    document.getElementById('clearGallery').addEventListener('click', () => {
      if (confirm('Borrar todas las fotos de la galería?')) {
        state.gallery = [];
        saveState(state);
        render();
      }
    });

    // Contact form (simulación)
    document.getElementById('sendContact').addEventListener('click', () => {
      const name = document.getElementById('contactName').value.trim();
      const email = document.getElementById('contactEmail').value.trim();
      const message = document.getElementById('contactMessage').value.trim();
      if (!name || !email || !message) return alert('Completa todos los campos.');
      alert('Gracias, ' + name + '! (Este formulario es de demostración: envía el mensaje desde tu servidor o servicio de correo).');
      document.getElementById('contact').reset();
    });

    // Quick demo buttons
    document.getElementById('ctaPreview').addEventListener('click', () => {
      document.querySelector('[id="gallery"]').scrollIntoView({behavior:'smooth'});
    });

    // small helper: drag & drop hero image
    heroImg.addEventListener('click', async () => {
      const url = prompt('Pegar URL de imagen para el banner (vacío para usar el predeterminado):', state.heroImg || '');
      if (url !== null) {
        if (url.trim() === '') { state.heroImg = ''; }
        else state.heroImg = url.trim();
        saveState(state); render();
      }
    });

    // fallback: seed a nice hero example if no images
    if (!state.heroImg) {
      state.heroImg = 'https://images.unsplash.com/photo-1545239351-1141bd82e8a6?q=80&w=1400&auto=format&fit=crop&ixlib=rb-4.0.3&s=example';
      saveState(state);
    }

  </script>
</body>
</html>
